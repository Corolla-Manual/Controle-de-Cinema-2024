﻿@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ExcluirSalaViewModel
@{
	Layout = "_Layout";
	ViewBag.Title = "Exclusão de Sala";
}

<div class="row mt-3">
	<div class="col-lg-6 d-grid gap-2">
		<label class="fs-5"><strong>Sala:</strong> @Model.Numero</label>
        
		<label><strong>Id:</strong> [@Model.Id]</label>
		<label><strong>Capacidade:</strong> @Model.Capacidade</label>
        
		@if (Model.Sessoes.Any())
		{
			<div class="mt-3">
				<h5>Sessões relacionadas à Sala:</h5>
                
				<ul>
					@foreach (var sessao in Model.Sessoes)
					{
						<li>@sessao.DataHorario</li>
					}
				</ul>
			</div>
		}
        
		<p class="text-bg-danger p-3 rounded fs-5 mt-2">
			Deseja realmente confirmar a exclusão? Não será possível recuperar os dados excluídos posteriormente.
		</p>

		<form class="mt-2 d-grid gap-2 d-md-block" asp-action="excluir">
			<button class="btn btn-danger px-5">
				<i class="bi bi-trash-fill me-1"></i>
				Excluir
			</button>
            
			<a class="btn btn-secondary px-5" href="/sala/listar">
				<i class="bi bi-arrow-return-left me-1"></i>
				Voltar
			</a>

		</form>
	</div>
</div>