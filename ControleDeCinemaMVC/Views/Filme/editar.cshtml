@model EditarFilmeViewModel;

@{
	Layout = "_Layout";
	ViewBag.Title = "Edição de Filme";
}

<div class="row mt-3">
	<div class="col-lg-6">
		<form class="d-grid gap-4" asp-action="Editar">

			<div class="mt-2">
				<label class="control-label fw-semibold">Titulo do Filme:</label>
				<input class="form-control" asp-for="Titulo" />
				<span class="text-danger my-1" asp-validation-for="Titulo"></span>
			</div>

			<div class="mt-2">
				<label class="control-label fw-semibold">Duração do Filme:</label>
				<input class="form-control" asp-for="Duracao" />
				<span class="text-danger my-1" asp-validation-for="Duracao"></span>
			</div>

			<div class="mt-2">
				<label class="control-label fw-semibold">Genero do Filme:</label>
				<input class="form-control" asp-for="Genero" />
				<span class="text-danger my-1" asp-validation-for="Genero"></span>
			</div>
			
			<div class="form-check mt-2">
				@Html.CheckBoxFor(f => f.Estreia, "disabled=disabled")
				<label class="form-check-label fw-semibold" asp-for="Estreia">Estreia</label>
				<span class="text-danger my-1" asp-validation-for="Genero"></span>
			</div>

			<div class="mt-2 d-grid gap-2 d-md-block">
				<button class="btn btn-primary px-5">
					<i class="bi bi-floppy-fill me-1"></i>
					Gravar
				</button>

				<a class="btn btn-secondary px-5" href="/filme/listar">
					<i class="bi bi-arrow-return-left me-1"></i>
					Voltar
				</a>
			</div>

		</form>

	</div>
</div>