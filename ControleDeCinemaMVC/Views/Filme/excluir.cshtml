﻿@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ExcluirFilmeViewModel
@{
	Layout = "_Layout";
	ViewBag.Title = "Exclusão de Filme";
}

<div class="row mt-3">
	<div class="col-lg-6 d-grid gap-2">
		<label class="fs-5"><strong>Filme:</strong> @Model.Titulo</label>

		<label><strong>Id:</strong> [@Model.Id]</label>
		<label><strong>Duração:</strong> @Model.Duracao</label>
		<label><strong>Genero:</strong> @Model.Genero</label>
		<label><strong>Estreia:</strong> @Model.Estreia?"Sim":"Não"</label>

		@if (Model.Sessoes.Any())
		{
			<div class="mt-3">
				<h5>Sessões relacionadas ao Filme:</h5>

				<ul>
					@foreach (var sessao in Model.Sessoes)
					{
						<li>@sessao.DataHorario</li>
					}
				</ul>
			</div>
		}

		<p class="text-bg-danger p-3 rounded fs-5 mt-2">
			Deseja realmente confirmar a exclusão? Não será possível recuperar os dados excluídos posteriormente.
		</p>

		<form class="mt-2 d-grid gap-2 d-md-block" asp-action="excluir">
			<button class="btn btn-danger px-5">
				<i class="bi bi-trash-fill me-1"></i>
				Excluir
			</button>

			<a class="btn btn-secondary px-5" href="/filme/listar">
				<i class="bi bi-arrow-return-left me-1"></i>
				Voltar
			</a>

		</form>
	</div>
</div>