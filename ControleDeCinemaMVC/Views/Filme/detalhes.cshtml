@model DetalhesFilmeViewModel

@{
	Layout = "_Layout";
	ViewBag.Title = "Detalhes do Filme";
}

<div class="row">
	<div class="col-lg-6 d-grid gap-2 d-md-block">

		<div class="d-grid">
			<label class="fs-5"><strong>Filme:</strong> @Model.Titulo</label>

			<label><strong>Id:</strong> [@Model.Id]</label>
			<label><strong>Duracao:</strong> @Model.Duracao</label>
			<label><strong>Genero:</strong> @Model.Genero</label>
			<label><strong>Estreia:</strong> @(Model.Estreia? "Sim": "Não")</label>
		</div>

		@if (Model.Sessoes.Any())
		{
			<div class="mt-3">
				<h5>Sessoes relacionadas ao filme:</h5>

				<ul>
					@foreach (var sessao in Model.Sessoes)
					{
						<li>@sessao.DataHorario</li>
					}
				</ul>
			</div>
		}

		<a href="/filme/listar" class="btn btn-secondary px-5 mt-4">
			<i class="bi bi-arrow-return-left me-1"></i>
			Voltar
		</a>
	</div>
</div>